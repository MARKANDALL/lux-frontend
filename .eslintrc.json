{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "globals": {
    "WaveSurfer": "readonly"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "public/vendor/"
  ],
  "overrides": [
    {
      "files": ["scripts/**/*.mjs"],
      "env": {
        "node": true
      }
    }
  ]
}
